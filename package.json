{
  "name": "@directive/core",
  "version": "1.0.0",
  "description": "Orchestrate AI agent conversations through structured sessions.",
  "main": "dist/main.js",
  "bin": {
    "directive": "dist/cli/index.js"
  },
  "scripts": {
    "dev": "nest start --watch",
    "build": "nest build",
    "build:cli": "tsc && chmod +x dist/cli/index.js",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "cli": "node dist/cli/index.js",
    "package": "npm run build:cli && npm pack",
    "package:global": "npm run build:cli && npm pack && npm install -g ./directive-core-*.tgz",
    "unlink": "npm unlink -g",
    "prepublishOnly": "npm run build:cli"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-perso:directive-ai/core.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "module",
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "inquirer": "^12.6.3",
    "lowdb": "^7.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "typescript": "^5.8.3",
    "xstate": "^5.20.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@types/inquirer": "^9.0.8",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "jest": "^30.0.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.0"
  }
}
